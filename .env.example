# Flask Backend Environment Variables (.env)
# IMPORTANT: This file contains sensitive credentials - DO NOT commit to git!

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
FLASK_CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,X-Requested-With

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
REGION=us-east-1
ACCESS_KEY_ID=your_access_key_id
SECRET_ACCESS_KEY=your_secret_access_key

# ============================================
# COGNITO CONFIGURATION
# ============================================
COGNITO_USERPOOL_ID=your_userpool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret

# ============================================
# DYNAMODB TABLE NAMES
# ============================================
CLOUDSERVICES_TABLE_NAME=CloudServices
CLOUDSERVICES_TABLE=CloudServices
DETECTIONS_TABLE_NAME=Detections
EMAILS_TABLE_NAME=Emails
EMPLOYEES_TABLE_NAME=Employees
USERS_TABLE_NAME=SecurityTeamUsers

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_URL=https://api.openai.com/v1/chat/completions

# ============================================
# NEO4J CONFIGURATION
# ============================================
# Replace YOUR_EC2_IP_OR_DOMAIN with your EC2 instance's public IP or domain
# Make sure EC2 security group allows inbound on port 7687 from your IP
NEO4J_URI=bolt://YOUR_EC2_IP_OR_DOMAIN:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password
NEO4J_ENCRYPTED=true

# ============================================
# DISTILBERT PHISHING DETECTION SERVICE
# ============================================
# URL of the DistilBERT FastAPI microservice (private IP in VPC)
# Use private IP for EC2-to-EC2 communication to avoid internet charges
# Format: http://<PRIVATE_IP>:8000/predict or http://<PRIVATE_DNS>:8000/predict
DISTILBERT_URL=http://10.0.1.50:8000/predict

# ============================================
# VIRUSTOTAL CONFIGURATION
# ============================================
# Get your API key from https://www.virustotal.com/gui/user/<username>/apikey
# Free tier: 4 requests/minute, 500 requests/day
# Premium tier: Higher rate limits
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
VIRUSTOTAL_BASE=https://www.virustotal.com/api/v3

# VirusTotal Cache Tables (DynamoDB)
# These tables cache VT domain and file results to reduce API calls
# NOTE: IP caching removed - IPs change frequently for legitimate users
# Create using: ./scripts/create-vt-cache-tables.sh
VT_DOMAIN_CACHE_TABLE=VirusTotal_DomainCache
VT_FILE_CACHE_TABLE=VirusTotal_FileCache
